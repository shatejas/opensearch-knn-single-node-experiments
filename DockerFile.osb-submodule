FROM opensearchproject/opensearch-benchmark:1.5.0

USER 0
RUN ["apt-get", "update"]
RUN ["apt-get", "install", "jq", "--assume-yes"]
USER 1000
COPY .gitmodules .
RUN git submodule update --init --recursive
COPY osb/osb-entry-point.sh /
COPY osb/custom /custom
COPY osb/bench-config-patch-script.sh /
COPY osb/benchmark.ini.patch /

ENTRYPOINT ["bash", "/osb-entry-point.sh"]