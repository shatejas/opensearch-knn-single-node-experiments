FROM python:3.9-slim-buster

USER 0
RUN ["apt-get", "update"]
RUN ["apt-get", "install", "jq", "--assume-yes"]
USER 1000
COPY osb-submodule /
COPY osb/osb-entry-point.sh /
COPY osb/custom /custom
COPY osb/bench-config-patch-script.sh /
